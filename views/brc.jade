extends layout

block content
    canvas#sakura(width='100vw',height='100vh')
    p.project-title
        a 蓝光BRC
    div.project-container
        div.item
            h3 declare-react.zip
            a(href='/brc/declare-react')
                button(id='declare-react') download
            p
                span 最近更新时间：
